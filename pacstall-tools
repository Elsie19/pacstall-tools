#!/bin/bash
RED='\033[0;31m'
NC='\033[0m' # No Color
BLUE='\033[1;34m'
while getopts ":mt" opt; do
  case ${opt} in
    m ) # process option m
      echo "Let's make a PACSCRIPT"
      DATE=$(date)
      curl https://raw.githubusercontent.com/Henryws/pacstall/1.0.4-Celeste/misc/APP > /tmp/PACSCRIPT-$DATE
      if [[ $EDITOR -ne 0 ]] ; then
      $EDITOR /tmp/PACSCRIPT-$DATE
      else
      $VISUAL /tmp/PACSCRIPT-$DATE
      fi
      ;;
    t ) # process option t
      ;;
    \? ) echo "Usage: cmd [-h] [-t]"
      ;;
  esac
done
